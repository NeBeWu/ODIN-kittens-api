<!DOCTYPE html>
<html>
  <head>
    <title>ODINKittensApi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <% if flash[:notice] %>
      <div>
        <p><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div>
        <p><%= alert %></p>
      </div>
    <% end %>
    <%= render 'layouts/navbar' %>
    <%= yield %>
  </body>
</html>
